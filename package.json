{
  "name": "assertive",
  "displayName": "Assertive",
  "description": "Assertive scripting language for HTTP request testing",
  "publisher": "Robert Beisicht",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "assertive",
        "aliases": [
          "Assertive",
          "assertive"
        ],
        "extensions": [
          ".ass"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "assertive",
        "scopeName": "source.assertive",
        "path": "./syntaxes/assertive.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "extension.runAssertive",
        "title": "Assertive: Run script"
      }
    ],
    "keybindings": [
      {
        "command": "extension.runAssertive",
        "key": "ctrl+alt+a",
        "mac": "shift+cmd+a"
      }
    ],
    "snippets": [
			{
				"language": "assertive",
				"path": "./snippets.json"
			}
		]
  },
  "devDependencies": {
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.55.0",
    "@types/ws": "^8.5.10",
    "typescript": "^4.0.3",
    "vscode-test": "^1.4.0",
    "ws": "^8.0.0"
  },
  "dependencies": {
    "ws": "^8.0.0",
       "vscode-languageclient": "^8.0.2"
  },
  "extensionDependencies":[
    "ms-dotnettools.vscode-dotnet-runtime"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Jokelab/Assertive.VsCode.git"
  },
  "homepage": "https://www.assertivescript.com"
}
